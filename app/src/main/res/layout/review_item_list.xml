<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Circular Image View  -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/reviewItemList_CIMG_imageViewCircular"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:src="#E2E2E2"
                    app:civ_border_color="#E2E2E2"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_reviewerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:text="REVIEWER NAME"
                            android:fontFamily="@font/aloevera"/>

<!--                        <com.google.android.material.textview.MaterialTextView-->
<!--                            android:id="@+id/reviewItemList_TXT_timeAgo"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            android:layout_marginEnd="10dp"-->
<!--                            android:text="- min ago" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aloevera"
                            android:text="reviewed " />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_reviewedMovieName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aloevera"
                            android:text="MOVIE NAME" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reviewItemList_IMG_movieImage"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_movie_the_lost_city" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/reviewItemList_TXT_movieName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="MOVIE NAME"
                        android:fontFamily="@font/aloevera"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/reviewItemList_TXT_movieDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aloevera"
                        android:text="MOVIE DATE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_genre1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_corners_view"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/aloevera"
                            android:text="#GENRE1" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_genre2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/round_corners_view"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/aloevera"
                            android:text="#GENRE2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_genre3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_corners_view"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/aloevera"
                            android:text="#GENRE3" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/reviewItemList_TXT_genre4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:background="@drawable/round_corners_view"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:fontFamily="@font/aloevera"
                            android:text="#GENRE4" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RatingBar
                android:id="@+id/reviewItemList_RB_ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:progressTint="#FFEB3B"
                android:theme="@style/RatingBar"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reviewItemList_TXT_reviewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corners_border_view"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/aloevera"
                android:text="***REVIEW TEXT***" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>